@using ProgrammersBlog.Entities.Dtos;
@model CommentAddDto

<div class="card my-4">
    <h5 class="card-header">Bir yorum ekle:</h5>
    <div class="card-body form-card">
        <form asp-action="Add" asp-controller="Comment" method="post" id="form-comment-add">
            <input type="hidden" asp-for="ArticleId" />
            <input name="IsValid" type="hidden" value="@ViewData.ModelState.IsValid.ToString()" />
            <div asp-validation-summary="All" class="text-danger" id="validation-summary" aria-hidden="true" style="display: none;"></div>
            <div class="form-group">
                <label class="form-label" asp-for="CreatedByName"></label>
                <input type="text" class="form-control" asp-for="CreatedByName" />
            </div>

            <div class="form-group">
                <textarea class="form-control" asp-for="Text" rows="3"></textarea>
            </div>
            <button type="button" id="btnSave" class="btn btn-primary">Ekle</button>
        </form>
    </div>
</div>