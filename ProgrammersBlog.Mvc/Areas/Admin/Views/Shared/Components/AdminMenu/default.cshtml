


@model UserWithRolesViewModal

<div id="layoutSidenav_nav">
    <nav class="sb-sidenav accordion sb-sidenav-dark" id="sidenavAccordion">
        <div class="sb-sidenav-menu">
            <div class="nav">
                <div class="sb-sidenav-menu-heading">MENÜ</div>
                <a class="nav-link" asp-area="Admin" asp-action="Index" asp-controller="Home">
                    <div class="sb-nav-link-icon"><i class="fas fa-tachometer-alt"></i></div>
                    Yönetim Paneli
                </a>
                <a class="nav-link" asp-area=""  asp-action="Index" asp-controller="Home">
                    <div class="sb-nav-link-icon"><i class="fas fa-blog"></i></div>
                  Blog Modülü
                </a>
                <div class="sb-sidenav-menu-heading">İÇERİKLER</div>
                <a class="nav-link" asp-area="Admin" asp-action="Index" asp-controller="Category">
                    <div class="sb-nav-link-icon"><i class="fas fa-th-list"></i></div>
                    Kategoriler
                </a>
                <a class="nav-link" asp-area="Admin" asp-action="Index" asp-controller="Article">
                    <div class="sb-nav-link-icon"><i class="fas fa-file-alt" ></i></div>
                    Makaleler
                </a>
                <a class="nav-link" asp-area="Admin" asp-action="Index" asp-controller="Comment">
                    <div class="sb-nav-link-icon"><i class="fas fa-comments"></i></div>
                    Yorumlar
                </a>

                <div class="sb-sidenav-menu-heading">KULLANICILAR</div>
                @if (Model.Roles.Any(x => x.Equals("SuperAdmin") || x.Equals("Role.Read")))
                {
                    <a class="nav-link" asp-area="Admin" asp-action="Index" asp-controller="Role">
                        <div class="sb-nav-link-icon"><i class="fas fa-user-shield"></i></div>
                        Roller
                    </a>
                }
                @*Dikkat bu menüleri yalnızca rolü SuperAdmin olanlar görebilir.*@
                @if(Model.Roles.Any(x => x.Equals("SuperAdmin") || x.Equals("User.Read")))
                {
                    <a class="nav-link" asp-area="Admin" asp-action="Index" asp-controller="User">
                        <div class="sb-nav-link-icon"><i class="fas fa-users"></i></div>
                        Kullanıcılar
                    </a>

                    <div class="sb-sidenav-menu-heading">Ayarlar</div>
                    <a class="nav-link" asp-area="Admin" asp-action="About" asp-controller="Options">
                        <div class="sb-nav-link-icon"><i class="fas fa-tachometer-alt"></i></div>
                        Hakkımızda Sayfa İçerikleri
                    </a>

                    <a class="nav-link" asp-area="Admin" asp-action="GeneralSettings" asp-controller="Options">
                        <div class="sb-nav-link-icon"><i class="fas fa-tachometer-alt"></i></div>
                       Genel Ayarlar
                    </a>

                    <a class="nav-link" asp-area="Admin" asp-action="EmailSettings" asp-controller="Options">
                        <div class="sb-nav-link-icon"><i class="fas fa-tachometer-alt"></i></div>
                        E-Posta Ayarları
                    </a>

                    <a class="nav-link" asp-area="Admin" asp-action="ArticleRightSideBarWidgetSettings" asp-controller="Options">
                        <div class="sb-nav-link-icon"><i class="fas fa-newspaper"></i></div>
                        Makale Sayfaları için Widget Ayarları
                    </a>
                }
                
               
                <div class="sb-sidenav-menu-heading">Diğer</div>
                <a class="nav-link collapsed" href="#" data-toggle="collapse" data-target="#collapseLayouts" aria-expanded="false" aria-controls="collapseLayouts">
                    <div class="sb-nav-link-icon"><i class="fas fa-archive"></i></div>
                    Arşiv
                    <div class="sb-sidenav-collapse-arrow"><i class="fas fa-angle-down"></i></div>
                </a>
                <div class="collapse" id="collapseLayouts" aria-labelledby="headingOne" data-parent="#sidenavAccordion">
                    <nav class="sb-sidenav-menu-nested nav">
                        <a class="nav-link" asp-area="Admin" asp-controller="Category" asp-action="DeletedCategories">Kategoriler</a>
                        <a class="nav-link" asp-area="Admin" asp-controller="Article" asp-action="DeletedArticles">Makaleler</a>
                    </nav>
                </div>
            </div>
        </div>


        <div class="sb-sidenav-footer">
            <div class="small">Giriş Yapan Kullanıcı:</div>
           @Model.User.UserName
        </div>
    </nav>
</div>
